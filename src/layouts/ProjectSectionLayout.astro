---
interface Props {
  project: object;
  indexKey: number;
  url: string;
}
const {project, indexKey, url} = Astro.props;

const assetsUrl = 'img';
---
<div>
  <section class="pt-5 pb-1">
    <div class="sm:flex sm:items-center sm:justify-between">
      <a
        href={url}
        target="_blank"
        class="[&:hover_h3]:underline [&:hover_h3]:decoration-dashed [&:hover_h3]:decoration-blue-400 inline-block -my-1 py-1 mr-1"
      >
        <h3 class="inline font-semibold text-lg">{project.name}</h3>{' '}
        <svg
          class="inline w-4 h-4 relative -top-0.5 text-blue-400"
          viewBox="0 0 24 24"
          fill="currentColor"
          aria-hidden="true"
          data-slot="icon"
        >
          <path
            fill-rule="evenodd"
            d="M15.75 2.25H21a.75.75 0 0 1 .75.75v5.25a.75.75 0 0 1-1.5 0V4.81L8.03 17.03a.75.75 0 0 1-1.06-1.06L19.19 3.75h-3.44a.75.75 0 0 1 0-1.5Zm-10.5 4.5a1.5 1.5 0 0 0-1.5 1.5v10.5a1.5 1.5 0 0 0 1.5 1.5h10.5a1.5 1.5 0 0 0 1.5-1.5V10.5a.75.75 0 0 1 1.5 0v8.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V8.25a3 3 0 0 1 3-3h8.25a.75.75 0 0 1 0 1.5H5.25Z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
      <div class="text-sm bg-neutral-800 text-white inline-block rounded-md px-2 py-0.5">
        {project.dateInfo}
      </div>
    </div>
    <p class="text-sm pt-1.5 pb-4 text-neutral-400 font-light">{project.desc}</p>
    <div class="rounded-lg overflow-hidden relative border border-neutral-700">
      {project.previewPlaceholder ? (
        <>
          <img
            id={`img-${indexKey}`}
            src={`${assetsUrl}/${project.previewPlaceholder.src}`}
            width={project.previewPlaceholder.width}
            height={project.previewPlaceholder.height}
            class="w-full"
            alt={`${project.name} preview`}
          />
          <div class="absolute bottom-4 right-4 bg-white/90 rounded-md px-3 py-1.5 text-sm appear text-neutral-800 shadow-md">
            ‚è≥ &nbsp;Loading animated preview...
          </div>
        </>
      ) : (
        <img
          src={
            project.preview.src.startsWith('http')
              ? project.preview.src
              : `${assetsUrl}/${project.preview.src}`
          }
          width={project.preview.width}
          height={project.preview.height}
          class="w-full"
          alt={`${project.name} preview`}
          loading="lazy"
        />
      )}
    </div>
  </section> 
  <slot />

</div>