---
import ProjectSectionLayout from "../layouts/ProjectSectionLayout.astro";
import SectionLayout from "../layouts/SectionLayout.astro";
// const allProjects = await Astro.glob('../pages/projects/*.md');
interface Props {
  projects: Array<{
    href: string;
    name: string;
    desc: string;
    dateInfo: string;
    preview: {
      src: string;
      width: number;
      height: number;
    };
    previewPlaceholder?: {
      src: string;
      width: number;
      height: number;
    };
  }>;
}
const { projects } = Astro.props;
---
<div>
  <div class="mt-20 text-2xl font-extralight flex gap-3.5 items-center text-neutral-400 tracking-wide"> 
    <h2 class="uppercase">Projects</h2> <div class="h-px bg-neutral-500 flex-1"></div> 
  </div>
  <SectionLayout>
    { projects.map((project: any, i: any) => {
        const url = project.href;
        return (
          <ProjectSectionLayout project={project} indexKey={i} url={url} />
        )
      })
    }
    
