---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Project from "../components/Project.astro";
import Tools from "../components/Tools.astro";
import Links from "../components/Links.astro";
const headTitle = "Andika Jaya";

const projects: any = [
  {
    href: "https://andikajayaw-hover-effect.netlify.app/",
    name: "Hover Effect",
    desc: "Create Hover Effect using GSAP",
    dateInfo: "Dec 2024",
    preview: { src: "HoverEffect.gif", width: 600, height: 379 },
  },
  {
    href: "https://andikajayaw-denpasar-map.netlify.app/",
    name: "Denpasar Map",
    desc: "A digital map for Denpasar (Bali) district only. Using OpenStreetMap and using indonesia-district data geojson. \nSoon will add some data or route service using openrouteservice.org to make it interactive.",
    dateInfo: "Nov 2024",
    preview: { src: "DenpasarMap.gif", width: 600, height: 379 },
  },
  {
    href: "https://andikajayaw-akaru-rebuild.netlify.app/",
    name: "AkaruRebuild",
    desc: "Rebuild AWWWARDS Winning using GSAP - Inspired: akaru.fr",
    dateInfo: "Oct 2024",
    preview: { src: "AkaruRebuild.gif", width: 600, height: 379 },
  },
];
---

<BaseLayout pageTitle={headTitle}>
  <Header title={headTitle} />
  <Project projects={projects} />
  <Tools />
  <Links />
</BaseLayout>
